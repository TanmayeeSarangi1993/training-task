<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   http://www.springframework.org/schema/beans/spring-beans.xsd"
	   default-init-method="ginit" default-destroy-method="gdestroy"
	   >
	   
     	
     	<!-- by default bean is created it will be singleton -->
   <bean id = "DefaultHello"  class = "com.training.spring.DefaultHello" scope = "singleton" >
 
   <property name = "name" value ="tanu"/>
   <property name = "city" value ="Bangalore"/>
   
   
   
   </bean>  	
</beans>